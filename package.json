{
  "name": "shorty",
  "version": "1.2.2",
  "description": "A simple private url shortener using Node.js & MySQL",
  "main": "server/shorty.js",
  "scripts": {
    "istanbul": "NODE_ENV=test istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly 'server/**/*.test.js' -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "server:start": "node server/shorty.js",
    "server:start:dev": "NODE_ENV=development nodemon -e js,mst,css --watch server --watch public server/shorty.js",
    "sass:watch": "node-sass -w styles/scss -o public/css-app",
    "sass:build": "node-sass styles/scss -o public/css-app --source-map true",
    "server:test": "NODE_ENV=test mocha --opts server/mocha.opts 'server/**/*.test.js'",
    "server:test:coverage": "nyc --reporter=html --reporter=text ./node_modules/mocha/bin/_mocha --opts server/mocha.opts 'server/**/*.test.js' && firefox ./coverage/index.html",
    "release-it": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wheresvic/shorty.git"
  },
  "author": "Victor Parmar",
  "license": "ISC",
  "homepage": "https://github.com/wheresvic/shorty#readme",
  "dependencies": {
    "@hapi/joi": "16.1.8",
    "bluebird": "3.7.2",
    "body-parser": "1.19.0",
    "bulma": "0.7.5",
    "chance": "1.1.3",
    "connect-flash": "0.1.1",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-rate-limit": "5.0.0",
    "express-session": "1.17.0",
    "helmet": "3.21.2",
    "moment": "2.24.0",
    "mustache-express": "1.3.0",
    "nanoid": "2.1.7",
    "nedb": "1.8.0",
    "noty": "3.2.0-beta",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "session-file-store": "1.3.1",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "cheerio": "1.0.0-rc.3",
    "coveralls": "3.0.9",
    "istanbul": "0.4.5",
    "mocha": "6.2.2",
    "node-sass": "4.13.0",
    "nyc": "14.1.1",
    "release-it": "12.4.3",
    "supertest": "4.0.2"
  }
}
